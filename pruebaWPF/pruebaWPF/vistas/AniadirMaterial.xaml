<Window x:Class="pruebaWPF.vistas.AniadirMaterial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="aniadirMaterial" Height="300" Width="300">
    <Grid>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top"/>
        <Label Content="Tipo" HorizontalAlignment="Left" Margin="10,108,0,0" VerticalAlignment="Top"/>
        <Label Content="Precio" HorizontalAlignment="Left" Margin="10,157,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="148,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Path=Material.Nombre}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="148,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox HorizontalAlignment="Left" Margin="148,112,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Path=TiposMateriales}" SelectedItem="{Binding Path=Material.Tipo}"/>
        <Button x:Name="botonAniadirModificar" Content="añadir" HorizontalAlignment="Left" Margin="96,221,0,0" VerticalAlignment="Top" Width="75" Click="botonAniadirModificar_Click"/>

    </Grid>
</Window>
