<Window x:Class="pruebaWPF.vistas.VistaGestionCarreras"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pruebaWPF.vistas"
        mc:Ignorable="d"
        Title="VistaGestionCarreras" Height="270.266" Width="347.337">
    <Grid>
        <DataGrid x:Name="gridCarreras" HorizontalAlignment="Left" Height="131" Margin="10,86,0,0" VerticalAlignment="Top" Width="305" GotMouseCapture="DataGrid_GotMouseCapture"
                  MouseDoubleClick="DataGrid_MouseDoubleClick" IsReadOnly="True" ItemsSource="{Binding Path=Carreras}"/>
        <Button x:Name="botonNueva" Content="Nueva" HorizontalAlignment="Left" Margin="240,13,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.261,0.245" Click="BotonNueva_Click"/>
        <Button x:Name="botonEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="240,58,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="BotonEliminar_Click"/>
        <Label Content="Nueva Carrera" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Carreras" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
